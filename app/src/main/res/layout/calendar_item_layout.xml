    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#EEEEEE"
        android:layout_marginLeft="5dp"
        android:textStyle="italic"
        android:maxLines="1"
        android:id="@+id/eventview"/>

</LinearLayout>