                                android:id="@+id/accountname3"
                                android:textColor="#EEEEEE"
                                android:textStyle="italic"/>
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:id="@+id/profimg3"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:id="@+id/addeventbtn3"
                            android:text="+"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:textColor="#FF0000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/alldaytext3"
                            android:text="All Day Event"
                            android:textColor="#FFFFFF"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="5dp"
                            android:visibility="gone"
                            android:background="#EF6C00" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:text="Loading...."
                            android:id="@+id/statustext3"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:text="Loading...."
                            android:textColor="#AAAAAA"
                            android:id="@+id/resultstext3"/>
                        <ListView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/calendarlist3" />
                        </LinearLayout>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/calendarframe4"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        android:orientation="vertical"
                        android:background="#11FFFFFF"
                        android:id="@+id/frame4content"
                        android:layout_margin="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:minLines="2"
                                android:maxLines="2"
                                android:text="Account name"
                                android:id="@+id/accountname4"
                                android:textColor="#EEEEEE"
                                android:textStyle="italic"/>
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:id="@+id/profimg4"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:id="@+id/addeventbtn4"
                            android:text="+"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:textColor="#FF0000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/alldaytext4"
                            android:text="All Day Event"
                            android:textColor="#FFFFFF"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="5dp"
                            android:background="#EF6C00" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:text="Loading...."
                            android:id="@+id/statustext4"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:text="Loading...."
                            android:textColor="#AAAAAA"
                            android:id="@+id/resultstext4"/>
                        <ListView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/calendarlist4" />
                        </LinearLayout>
                </FrameLayout>
            </LinearLayout>
                <ImageButton
                    android:id="@+id/switch_acc"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#00000000"
                    android:padding="0dp"
                    android:visibility="gone"
                    android:scaleType="fitCenter"
                    android:layout_margin="32dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/calendaradd"
                    android:text="CONFIGURE"/>
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"

            android:visibility="gone"
            android:id="@+id/textslayout2">

        </LinearLayout>

